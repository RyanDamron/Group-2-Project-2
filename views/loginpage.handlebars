<div class="login col 12">
  <!-- First Container -->
  <div class="container container-log-in">
    <h5 class="center-align">Log In</h5>
    <p class="center-align">Log in to view your account & make reservations!</p>
    <!-- Login Form -->
    <div class="row valign-wrapper">
      <form class="col s12 form login-form">
        <div class="row valign-wrapper">
          <div class="input-field col s12">
            <input id="username" type="text" class="validate" />
            <label for="username" class="text-color">Username</label>
          </div>
        </div>
        <div class="row valign-wrapper">
          <div class="input-field col s12">
            <input id="password" type="password" class="validate" />
            <label for="password" class="text-color">Password</label>
          </div>
        </div>
        <div class="row valign-wrapper">
          <button class="btn waves-effect waves-light" type="submit">Login
            <i class="material-icons right">loupe</i>
          </button>
        </div>
        <div>
          <a href="/signup" class="row valign-wrapper text-color link">Create an account</a>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>
